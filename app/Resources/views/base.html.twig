<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Integrity{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('../app/Resources/style/page.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}

        {% block javascripts %} 
            <script type="text/javascript" src="{{ asset('../web/bundles/puntoventa/js/jquery-min.js') }}"></script>            
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <div>
        <div id="header"></div>

        <div id="mainMenuDiv">      
            <ul id="mainMenu">
                <li>
                    <a href="#">Almacenes</a>
                    <ul>
                        <li><div class="menuItem"><a href="{{ path('categoria') }}">Categorias</a></div></li>
                        <li><div class="menuItem"><a href="{inventariosUrl}">Inventarios</a></div></li>                      
                    </ul>
                </li>
                <li>
                    <a href="#">Productos</a>
                    <ul>                            
                        <li><div class="menuItemLarge"><a href="{{ path('especificacion') }}">Especificaciones</a></div></li>
                        <li><div class="menuItemLarge"><a href="{catalogoUrl}">Catalogo</a></div></li>
                        <li><div class="menuItemLarge"><a href="{{ path('producto') }}">Productos</a></div></li>                            
                    </ul>
                </li>
                <li>
                    <a href="#">Ventas</a>
                    <ul>
                        <li><div class="menuItem"><a href="{abonosUrl}">Abonos</a></div></li>
                        <li><div class="menuItem"><a href="{{ path('venta') }}">Reportes</a></div></li>
                        <li><div class="menuItem"><a href="{{ path('_welcome') }}">Venta</a></div></li>
                    </ul> 
                </li>
                <li>
                    <a href="{{ path('cliente') }}">Clientes</a> 
                </li>
                <li>
                    <a href="{{ path('tipocambio_new') }}">Configuracion</a>
                </li>
            </ul>
        </div>

       
            <div id="submenuback"> </div>
            <div id="submenu"> {% block submenu %}{% endblock %}</div>

            <div id="content">
                {% block body %}{% endblock %}
                
            </div>
      </div>
    </body>
</html>
