{% extends 'PuntoVentaBundle:Producto:main.html.twig' %}

{% form_theme edit_form '::fields.html.twig' %}

{% block body -%}
    <div id="section-title-div"> 
        <label id="section-title">Editar Producto</label>
    </div>

    <form action="{{ path('producto_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <input type="submit" value="Editar" />
        </p>
    </form>

        
{% endblock %}
