{% extends 'PuntoVentaBundle:tipoCambio:main.html.twig' %}

{% form_theme form '::fields.html.twig' %}

{% block body -%}
    <div id="section-title-div"> 
        <label id="section-title">Tipo de Cambio</label>
    </div>
    <span>Actual: $  
	{% if latest %}
	   {{ latest.tipoCambio | number_format(2, '.', ',') }}
	{% else %}
	  0.00
	{% endif %} 
    x 1
    </span> 
    
    <a href="{{ path('tipocambio') }}">( Historial )</a>
    <form action="{{ path('tipocambio_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <p>
            <input type="submit" value="Actualizar" />
        </p>
    </form>        
{% endblock %}
