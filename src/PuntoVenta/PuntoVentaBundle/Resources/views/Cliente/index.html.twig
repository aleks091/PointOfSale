{% extends 'PuntoVentaBundle:Cliente:main.html.twig' %}


{% block body -%}
    <div id="section-title-div"> 
        <label id="section-title">Clientes</label>
    </div>

    <table class="multipleRowsTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Direccion</th>
                <th>Telefono</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cliente_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.direccion }}</td>
                <td>{{ entity.telefono }}</td>
                <td>
                <ul>
                    
                        <a href="{{ path('cliente_show', { 'id': entity.id }) }}">Ver</a>
                        |
                        <a href="{{ path('cliente_edit', { 'id': entity.id }) }}">Editar</a>
                    
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
