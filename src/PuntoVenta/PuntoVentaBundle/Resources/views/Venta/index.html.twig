{% extends '::base.html.twig' %}

{% block body -%}
    <div id="section-title-div"> 
        <label id="section-title">Ventas</label>
    </div>  

    <table class="multipleRowsTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecharealizada</th>
                <th>Fechapagada</th>
                <th>Cliente</th>
                <th>Productos</th>
                <th>Total</th>
                <th>Subtotal</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('venta_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.fechaRealizada %}{{ entity.fechaRealizada|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.fechaPagada }}</td>
                <td>{{ entity.cliente }}</td>
                <td>{{ entity.productos }}</td>
                <td>{{ entity.total }}</td>
                <td>{{ entity.subtotal }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('venta_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('venta_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
